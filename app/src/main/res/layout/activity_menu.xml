<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uinbdg.id.doa.Activities.MenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary" />

        <TextView
            fontPath="fonts/montserrat_bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="HAFALAN DOA"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/btn_materi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:id="@+id/img_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/spacing_large"
                        android:src="@drawable/ic_assignment_black_24dp" />

                    <TextView
                        fontPath="fonts/montserrat_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_1"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/spacing_medium"
                        android:text="MATERI" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/btn_latihan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:id="@+id/img_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/spacing_large"
                        android:src="@drawable/ic_latihan_black_24dp" />

                    <TextView
                        fontPath="fonts/montserrat_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_2"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/spacing_medium"
                        android:text="LATIHAN" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/btn_skor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:id="@+id/img_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/spacing_large"
                        android:src="@drawable/ic_skor_1_black_24dp" />

                    <TextView
                        fontPath="fonts/montserrat_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_1"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/spacing_medium"
                        android:text="SKOR" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/btn_tentang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:tint="@color/colorPrimary"
                        android:id="@+id/img_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/spacing_large"
                        android:src="@drawable/ic_info_black_24dp" />

                    <TextView
                        fontPath="fonts/montserrat_bold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_2"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/spacing_medium"
                        android:text="TENTANG"
                        />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
